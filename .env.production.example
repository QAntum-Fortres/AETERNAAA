# AETERNAAA Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ============================================
# STRIPE PAYMENT INTEGRATION
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY

# ============================================
# BINANCE EXCHANGE INTEGRATION
# ============================================
# Get from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Use READ-ONLY API keys (no trading permissions)
EXCHANGE_API_KEY=your_binance_api_key
EXCHANGE_SECRET_KEY=your_binance_secret_key

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8890
WS_PORT=8765
RUST_LOG=info
NODE_ENV=production

# ============================================
# SECURITY
# ============================================
# CORS origin (your frontend domain)
CORS_ORIGIN=https://yourdomain.com
# Or for development: http://localhost:3000

# JWT Secret (if using authentication)
JWT_SECRET=your_jwt_secret_key_min_32_chars

# ============================================
# DATABASE / STORAGE (Optional)
# ============================================
# Pinecone Vector Store (if using)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=aeterna-memory

# ============================================
# EXTERNAL SERVICES
# ============================================
# Backend URL (for frontend)
BACKEND_URL=https://api.yourdomain.com
WS_URL=wss://api.yourdomain.com/ws

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry DSN (error tracking)
SENTRY_DSN=your_sentry_dsn

# ============================================
# DEPLOYMENT PLATFORM SPECIFIC
# ============================================
# For Google Cloud Run
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_REGION=europe-west1

# For Railway
# RAILWAY_ENVIRONMENT=production

# For Render
# RENDER=true
